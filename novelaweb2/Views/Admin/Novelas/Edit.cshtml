@model novelaweb2.Models.Novela

@{
    ViewData["Title"] = "Editar novela";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-light mb-3">✏️ Editar novela</h2>

    <div class="card bg-dark text-light p-3">
        <form asp-action="EditarNovela" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sinopsis" class="form-label"></label>
                <textarea asp-for="Sinopsis" rows="4" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Genero" class="form-label"></label>
                <input asp-for="Genero" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <input asp-for="Estado" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PortadaUrl" class="form-label"></label>
                <input asp-for="PortadaUrl" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Autor</label>
                <select asp-for="AutorId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Autores, "Id", "NombreUsuario", Model.AutorId))">
                    <option value="">-- Selecciona autor --</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">
                Guardar cambios
            </button>
            <a asp-action="Novelas" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
