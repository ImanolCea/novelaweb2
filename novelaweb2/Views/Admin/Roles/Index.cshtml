@model IEnumerable<novelaweb2.Models.Role>
@{
    ViewData["Title"] = "Administrar roles";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.Total ?? 0;
    int totalPages = ViewBag.TotalPages ?? 1;

    string search = ViewBag.Search as string ?? "";
    int from = total == 0 ? 0 : ((page - 1) * pageSize) + 1;
    int to = Math.Min(page * pageSize, total);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">
            <i class="fa-solid fa-user-shield"></i> Roles
        </h2>

        <div class="d-flex gap-2">
            <a asp-controller="Roles" asp-action="Create"
               class="btn btn-primary btn-sm">
                <i class="fa fa-plus"></i> Nuevo rol
            </a>

            <a asp-action="ExportRolesExcel"
               asp-route-search="@search"
               class="btn btn-success btn-sm">
                <i class="fa-solid fa-file-excel"></i> Excel
            </a>

            <a asp-action="ExportRolesPdf"
               asp-route-search="@search"
               class="btn btn-danger btn-sm">
                <i class="fa-solid fa-file-pdf"></i> PDF
            </a>
        </div>
    </div>

    <div class="card bg-dark border-secondary">
        <div class="card-body">

            <!-- Filtros -->
            <form method="get" class="row g-3 mb-3">
                <div class="col-md-3 col-sm-6">
                    <label class="form-label">Buscar</label>
                    <input type="text" name="search" value="@search"
                           class="form-control" placeholder="Nombre de rol" />
                </div>

                <div class="col-md-3 col-sm-6">
                    <label class="form-label">Mostrar</label>
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        @{
                            var sizes = new[] { 10, 25, 50, 100 };
                            foreach (var s in sizes)
                            {
                                if (s == pageSize)
                                {
                                    <option value="@s" selected="selected">@s</option>
                                }
                                else
                                {
                                    <option value="@s">@s</option>
                                }
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3 col-sm-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa fa-search"></i> Filtrar
                    </button>
                </div>
            </form>

            <!-- Tabla -->
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">
                                No se encontraron roles.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.Nombre</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Roles" asp-action="Details"
                                           asp-route-id="@r.Id"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fa fa-eye"></i>
                                        </a>

                                        <a asp-controller="Roles" asp-action="Edit"
                                           asp-route-id="@r.Id"
                                           class="btn btn-sm btn-warning">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <form asp-action="EliminarRol" method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('¿Eliminar este rol?');">
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>

            <!-- Info + paginación -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-3 gap-2">
                <div>
                    Mostrando @from a @to de @total registros
                </div>

                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(page == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Roles"
                               asp-route-page="1"
                               asp-route-pageSize="@pageSize"
                               asp-route-search="@search">Primero</a>
                        </li>
                        <li class="page-item @(page == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Roles"
                               asp-route-page="@(page - 1)"
                               asp-route-pageSize="@pageSize"
                               asp-route-search="@search">Anterior</a>
                        </li>

                        <li class="page-item active">
                            <span class="page-link"></span>
                        </li>

                        <li class="page-item @(page == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Roles"
                               asp-route-page="@(page + 1)"
                               asp-route-pageSize="@pageSize"
                               asp-route-search="@search">Siguiente</a>
                        </li>
                        <li class="page-item @(page == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Roles"
                               asp-route-page="@totalPages"
                               asp-route-pageSize="@pageSize"
                               asp-route-search="@search">Último</a>
                        </li>
                    </ul>
                </nav>
            </div>

        </div>
    </div>
</div>
