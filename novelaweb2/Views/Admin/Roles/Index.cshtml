@model IEnumerable<novelaweb2.Models.Role>

@{
    ViewData["Title"] = "Administrar roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-light mb-3">
        <i class="fa-solid fa-user-shield me-2"></i> Roles
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <p class="text-muted">No hay roles registrados.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th style="width:120px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Id</td>
                            <td>@r.Nombre</td>
                            <td>
                                <form asp-action="EliminarRol" asp-controller="Admin" method="post"
                                      onsubmit="return confirm('Â¿Eliminar rol @r.Nombre?');">
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
