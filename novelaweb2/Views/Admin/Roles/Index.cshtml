@model IEnumerable<novelaweb2.Models.Role>

@{
    ViewData["Title"] = "Administrar roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-light mb-0">
            <i class="fa-solid fa-user-shield me-2"></i> Roles
        </h2>

        <a asp-controller="Roles" asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> Nuevo rol
        </a>
    </div>

    <div class="card bg-dark border-secondary shadow-sm">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th class="text-center" style="width:180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Id</td>
                            <td>@r.Nombre</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Roles" asp-action="Details" asp-route-id="@r.Id"
                                       class="btn btn-sm btn-outline-light" title="Detalles">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-controller="Roles" asp-action="Edit" asp-route-id="@r.Id"
                                       class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <form asp-action="EliminarRol" method="post" class="d-inline frm-delete-rol">
                                        <input type="hidden" name="id" value="@r.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll('.frm-delete-rol').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: '¿Eliminar rol?',
                    text: 'Esta acción no se puede deshacer.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}
