@model novelaweb2.Models.Etiqueta
@{
    ViewData["Title"] = "Editar Etiqueta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-light fw-bold mb-3">✏️ Editar etiqueta</h2>

    <div class="card bg-dark p-4 shadow-sm">
        <form asp-action="EditarEtiqueta" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label class="form-label text-light">Nombre de la etiqueta</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning">
                <i class="fa fa-save"></i> Actualizar
            </button>
            <a asp-action="Etiquetas" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
