@model novelaweb2.Models.Etiqueta
@{
    ViewData["Title"] = "Crear Etiqueta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-light fw-bold mb-3">➕ Crear nueva etiqueta</h2>

    <div class="card bg-dark p-4 shadow-sm">
        <form asp-action="CrearEtiqueta" method="post">
            <div class="mb-3">
                <label class="form-label text-light">Nombre de la etiqueta</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej: Fantasía" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fa fa-save"></i> Guardar
            </button>
            <a asp-action="Etiquetas" class="btn btn-secondary">Volver</a>
        </form>
    </div>
</div>
