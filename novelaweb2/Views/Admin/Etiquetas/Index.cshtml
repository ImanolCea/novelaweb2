@model IEnumerable<novelaweb2.Models.Etiqueta>
@{
    ViewData["Title"] = "Administrar Etiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/2.0.2/css/dataTables.dataTables.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.2/js/dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-light fw-bold">üè∑Ô∏è Administrar Etiquetas</h2>
        <a asp-action="CrearEtiqueta" class="btn btn-primary">
            <i class="fa fa-plus"></i> Nueva etiqueta
        </a>
    </div>

    <div class="card bg-dark p-3 rounded shadow-sm">
        <table id="etiquetasTable" class="table table-dark table-hover align-middle w-100">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Id</td>
                        <td>@e.Nombre</td>
                        <td>
                            <a asp-action="EditarEtiqueta" asp-route-id="@e.Id" class="btn btn-warning btn-sm">
                                <i class="fa fa-edit"></i> Editar
                            </a>
                            <form asp-action="EliminarEtiqueta" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@e.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            new DataTable('#etiquetasTable', { language: { url: 'https://cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json' } });
            $('form').on('submit', function (ev) {
                ev.preventDefault();
                const f = this;
                Swal.fire({
                    title: '¬øEliminar etiqueta?',
                    text: 'Esta acci√≥n no se puede deshacer.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Eliminar',
                    cancelButtonText: 'Cancelar'
                }).then(r => { if (r.isConfirmed) f.submit(); });
            });
        });
    </script>
}
