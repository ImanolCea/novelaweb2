@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.2/css/dataTables.dataTables.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.2/js/dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container mt-4">
    <h2 class="text-center text-light mb-4">Panel de Administración</h2>
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle rounded">
            <thead><tr><th>ID</th><th>Ejemplo</th></tr></thead>
            <tbody><tr><td>1</td><td>Vista de ejemplo</td></tr></tbody>
        </table>
    </div>
</div>
@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", function () {
    new DataTable("table", {language: {url: "https://cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json"}});
    const success = '@TempData["Success"]';
    const error = '@TempData["Error"]';
    if (success) Swal.fire({icon: 'success', title: 'Éxito', text: success});
    if (error) Swal.fire({icon: 'error', title: 'Error', text: error});
});
</script>
}
