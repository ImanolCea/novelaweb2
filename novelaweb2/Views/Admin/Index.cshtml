@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container mt-5">
    <h1 class="text-center text-light mb-5 fw-bold">⚙️ Panel de Administración</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-4 justify-content-center">

        <div class="col-md-4">
            <div class="card bg-dark border border-secondary shadow-sm hover-scale text-center p-4">
                <h4 class="text-light mb-3"><i class="fa fa-users"></i> Usuarios</h4>
                <p class="text-muted">Gestiona los usuarios del sistema.</p>
                <a asp-action="Usuarios" class="btn btn-primary w-100">Ir a Usuarios</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border border-secondary shadow-sm hover-scale text-center p-4">
                <h4 class="text-light mb-3"><i class="fa fa-book"></i> Novelas</h4>
                <p class="text-muted">Administra todas las novelas publicadas.</p>
                <a asp-action="Novelas" class="btn btn-primary w-100">Ir a Novelas</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border border-secondary shadow-sm hover-scale text-center p-4">
                <h4 class="text-light mb-3"><i class="fa fa-tags"></i> Etiquetas</h4>
                <p class="text-muted">Crea, edita o elimina etiquetas.</p>
                <a asp-action="Etiquetas" class="btn btn-primary w-100">Ir a Etiquetas</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border border-secondary shadow-sm hover-scale text-center p-4">
                <h4 class="text-light mb-3"><i class="fa fa-id-badge"></i> Roles</h4>
                <p class="text-muted">Gestiona roles de usuario y permisos.</p>
                <a asp-action="Roles" class="btn btn-primary w-100">Ir a Roles</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border border-secondary shadow-sm hover-scale text-center p-4">
                <h4 class="text-light mb-3"><i class="fa fa-comment"></i> Comentarios</h4>
                <p class="text-muted">Modera o elimina comentarios inapropiados.</p>
                <a asp-action="Comentarios" class="btn btn-primary w-100">Ir a Comentarios</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border border-secondary shadow-sm hover-scale text-center p-4">
                <h4 class="text-light mb-3"><i class="fa fa-star"></i> Reseñas</h4>
                <p class="text-muted">Revisa y modera las reseñas de novelas.</p>
                <a asp-action="Resenas" class="btn btn-primary w-100">Ir a Reseñas</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const success = '@TempData["Success"]';
            const error = '@TempData["Error"]';
            if (success) {
                Swal.fire({ icon: 'success', title: 'Éxito', text: success });
            }
            if (error) {
                Swal.fire({ icon: 'error', title: 'Error', text: error });
            }
        });
    </script>
}
