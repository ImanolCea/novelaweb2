@model novelaweb2.Models.Capitulo
@{
    ViewData["Title"] = "Editar Capítulo";
}

<div class="capitulo-form-container">
    <div class="card bg-dark text-light p-4">
        <h2 class="mb-4 text-center">Editar capítulo</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="NovelaId" />

            <div class="mb-3">
                <label asp-for="NumeroCapitulo" class="form-label">Número de Capítulo</label>
                <input asp-for="NumeroCapitulo" class="form-control" readonly />
                <span asp-validation-for="NumeroCapitulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contenido" class="form-label">Contenido</label>
                <textarea asp-for="Contenido" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">Guardar cambios</button>
                <a asp-controller="Capituloes" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
