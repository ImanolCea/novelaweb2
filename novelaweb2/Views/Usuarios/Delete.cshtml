@model novelaweb2.Models.Usuario

@{
    ViewData["Title"] = "Eliminar usuario";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title text-danger">Eliminar usuario</h1>
            <p class="admin-subtitle">Esta acción eliminará definitivamente la cuenta seleccionada.</p>
        </div>
        <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Cancelar</a>
    </div>

    <div class="admin-card">
        <dl class="row mb-4">
            <dt class="col-sm-3 text-uppercase text-muted">Usuario</dt>
            <dd class="col-sm-9 text-white">@Model?.NombreUsuario</dd>

            <dt class="col-sm-3 text-uppercase text-muted">Correo</dt>
            <dd class="col-sm-9">@Model?.Correo</dd>

            <dt class="col-sm-3 text-uppercase text-muted">Rol</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">@Model?.Rol?.Nombre</span></dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash me-2"></i>Eliminar usuario
            </button>
            <a class="btn btn-outline-light" asp-action="Index">Conservar</a>
        </form>
    </div>
</div>
