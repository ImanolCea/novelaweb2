@model novelaweb2.Models.Usuario

@{
    ViewData["Title"] = "Editar usuario";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Editar usuario</h1>
            <p class="admin-subtitle">Actualiza la informaci√≥n del perfil seleccionado.</p>
        </div>
        <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Volver</a>
    </div>

    <div class="admin-card">
        <form asp-action="Edit" class="admin-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="NombreUsuario" class="form-label"></label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" type="email" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Contrasena" class="form-label"></label>
                    <input asp-for="Contrasena" class="form-control" type="password" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaRegistro" class="form-label"></label>
                    <input asp-for="FechaRegistro" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="RolId" class="form-label">Rol</label>
                    <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId"></select>
                    <span asp-validation-for="RolId" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Bio" class="form-label"></label>
                    <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="AvatarUrl" class="form-label"></label>
                    <input asp-for="AvatarUrl" class="form-control" />
                    <span asp-validation-for="AvatarUrl" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">
                <i class="fa-solid fa-floppy-disk me-2"></i>Guardar cambios
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
