@model IEnumerable<novelaweb2.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Usuarios</h1>
            <p class="admin-subtitle">Gestiona los perfiles registrados y controla sus permisos.</p>
        </div>
        <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-user-plus me-2"></i>Nuevo usuario</a>
    </div>

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover table-borderless align-middle admin-table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Registro</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Aún no hay usuarios registrados.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-white fw-semibold">@item.NombreUsuario</td>
                                <td>@item.Correo</td>
                                <td><span class="badge bg-secondary">@item.Rol?.Nombre</span></td>
                                <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="admin-actions justify-content-end">
                                        <a class="btn btn-sm btn-outline-light" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-circle-info me-1"></i>Detalles
                                        </a>
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-pen-to-square me-1"></i>Editar
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-trash me-1"></i>Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
