@model novelaweb2.Models.Lista
@{
    ViewData["Title"] = "Nueva lista";
}
<div class="max-1200 text-light">
    <h3 class="section-title">Crear nueva lista</h3>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control form-control-dark" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control form-control-dark" rows="3"></textarea>
        </div>
        <button class="btn btn-primary">Guardar</button>
        <a asp-action="MisListas" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
