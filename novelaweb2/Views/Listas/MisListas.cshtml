@model IEnumerable<novelaweb2.Models.Lista>
@{
    ViewData["Title"] = "Mis listas";
}
<div class="max-1200 text-light">
    <h3 class="section-title">Mis listas</h3>
    <a class="btn btn-primary mb-3" asp-action="Create">+ Nueva lista</a>

    @if (!Model.Any())
    {
        <p class="text-muted">Aún no tienes listas creadas.</p>
    }
    else
    {
        foreach (var l in Model)
        {
            <div class="card bg-dark text-light mb-3 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5>@l.Nombre</h5>
                        <small class="text-muted">@l.Descripcion</small>
                    </div>
                    <div>
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@l.Id">Ver</a>
                        <form asp-action="Delete" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@l.Id" />
                            <button class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>
