@model IEnumerable<novelaweb2.Models.Etiqueta>

@{
    ViewData["Title"] = "Etiquetas";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Etiquetas</h1>
            <p class="admin-subtitle">Organiza los géneros y etiquetas que clasifican las novelas.</p>
        </div>
        <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-plus me-2"></i>Nueva etiqueta</a>
    </div>

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover table-borderless align-middle admin-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted py-4">Aún no hay etiquetas registradas.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-white fw-semibold">@item.Nombre</td>
                                <td>
                                    <div class="admin-actions justify-content-end">
                                        <a class="btn btn-sm btn-outline-light" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-circle-info me-1"></i>Detalles
                                        </a>
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-pen-to-square me-1"></i>Editar
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-trash me-1"></i>Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
