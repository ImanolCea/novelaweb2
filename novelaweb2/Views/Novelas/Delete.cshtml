@model novelaweb2.Models.Novela

@{
    ViewData["Title"] = "Eliminar novela";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title text-danger">Eliminar novela</h1>
            <p class="admin-subtitle">Confirma si deseas eliminar esta serie y todo su contenido asociado.</p>
        </div>
        <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Cancelar</a>
    </div>

    <div class="admin-card">
        <dl class="row mb-4">
            <dt class="col-sm-3 text-uppercase text-muted">TÃ­tulo</dt>
            <dd class="col-sm-9 text-white">@Model?.Titulo</dd>

            <dt class="col-sm-3 text-uppercase text-muted">Autor</dt>
            <dd class="col-sm-9">@Model?.Autor?.NombreUsuario</dd>

            <dt class="col-sm-3 text-uppercase text-muted">Estado</dt>
            <dd class="col-sm-9">@Model?.Estado</dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash me-2"></i>Eliminar novela
            </button>
            <a class="btn btn-outline-light" asp-action="Index">Conservar</a>
        </form>
    </div>
</div>
