@model novelaweb2.Models.ViewModels.NovelaCreateViewModel
@{
    ViewData["Title"] = "Crear nueva novela";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-light fw-bold mb-4">📖 Crear nueva novela</h2>

    <div class="card bg-dark p-4 shadow-sm">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Titulo" class="form-label text-light">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sinopsis" class="form-label text-light">Sinopsis</label>
                <textarea asp-for="Sinopsis" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Sinopsis" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genero" class="form-label text-light">Género</label>
                <input asp-for="Genero" class="form-control" placeholder="Ej: Fantasía, Romance..." />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label text-light">Estado</label>
                <select asp-for="Estado" class="form-select">
                    <option>En curso</option>
                    <option>Finalizada</option>
                    <option>Hiatus</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label text-light">Etiquetas</label>
                <select asp-for="EtiquetasSeleccionadas" asp-items="ViewBag.Etiquetas"
                        multiple class="form-select"></select>
                <span asp-validation-for="EtiquetasSeleccionadas" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PortadaUrl" class="form-label text-light">URL de portada (opcional)</label>
                <input asp-for="PortadaUrl" class="form-control" />
            </div>

            <hr class="text-secondary" />

            <h5 class="text-info mb-3">Primer capítulo</h5>
            <div class="mb-3">
                <label asp-for="TituloCapitulo" class="form-label text-light">Título del primer capítulo</label>
                <input asp-for="TituloCapitulo" class="form-control" />
                <span asp-validation-for="TituloCapitulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContenidoCapitulo" class="form-label text-light">Contenido</label>
                <textarea asp-for="ContenidoCapitulo" rows="10" class="form-control"></textarea>
                <span asp-validation-for="ContenidoCapitulo" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Crear novela
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
