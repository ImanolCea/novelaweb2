@using Microsoft.AspNetCore.Mvc.Rendering
@model novelaweb2.Models.Novela

@{
    ViewData["Title"] = "Editar novela";
    var etiquetas = ViewData["Etiquetas"] as MultiSelectList ?? new MultiSelectList(Enumerable.Empty<object>());
    var autores = ViewData["Autores"] as SelectList ?? new SelectList(Enumerable.Empty<object>());
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Editar novela</h1>
            <p class="admin-subtitle">Realiza ajustes en la informaci√≥n de la serie seleccionada.</p>
        </div>
        <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Volver</a>
    </div>

    <div class="admin-card">
        <form asp-action="Edit" method="post" class="admin-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row g-4">
                <div class="col-md-8">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="AutorId" class="form-label">Autor</label>
                    <select asp-for="AutorId" class="form-select" asp-items="autores"></select>
                    <span asp-validation-for="AutorId" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Sinopsis" class="form-label"></label>
                    <textarea asp-for="Sinopsis" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Sinopsis" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="PortadaUrl" class="form-label"></label>
                    <input asp-for="PortadaUrl" class="form-control" />
                    <span asp-validation-for="PortadaUrl" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Genero" class="form-label"></label>
                    <input asp-for="Genero" class="form-control" />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Estado" class="form-label"></label>
                    <select asp-for="Estado" class="form-select">
                        <option value="En curso">En curso</option>
                        <option value="Finalizada">Finalizada</option>
                        <option value="Hiato">Hiato</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="PalabrasTotales" class="form-label"></label>
                    <input asp-for="PalabrasTotales" class="form-control" type="number" min="0" />
                    <span asp-validation-for="PalabrasTotales" class="text-danger"></span>
                </div>
                <div class="col-md-8">
                    <label class="form-label">Etiquetas</label>
                    <select class="form-select" name="etiquetasSeleccionadas" asp-items="etiquetas" multiple size="5"></select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-4">
                <i class="fa-solid fa-floppy-disk me-2"></i>Guardar cambios
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
