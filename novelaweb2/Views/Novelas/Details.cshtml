@model novelaweb2.Models.Novela
@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container mt-4">
    <div class="row">
        <!-- Portada -->
        <div class="col-md-3 text-center">
            <img src="@Model.PortadaUrl" class="img-fluid rounded shadow mb-3" alt="@Model.Titulo" />
            <div class="details-buttons">
                <form asp-controller="Seguimientoes" asp-action="Seguir" method="post">
                    <input type="hidden" name="novelaId" value="@Model.Id" />
                    <button class="btn btn-primary w-100">Seguir</button>
                </form>

                <a class="btn btn-secondary w-100" asp-controller="Capituloes" asp-action="Details" asp-route-id="@Model.Capitulos.FirstOrDefault()?.Id">
                    Empezar desde el 1
                </a>

                @if (Model.Capitulos != null && Model.Capitulos.Any())
                {
                    var ultimo = Model.Capitulos.LastOrDefault();
                    if (ultimo != null)
                    {
                        <a class="btn btn-ghost w-100" asp-controller="Capituloes" asp-action="Details" asp-route-id="@ultimo.Id">
                            Continuar
                        </a>
                    }
                }

                @if (Context.Session.GetString("UsuarioNombre") == Model.Autor?.NombreUsuario)
                {
                    <a class="btn btn-accent w-100" asp-controller="Capituloes" asp-action="Create" asp-route-novelaId="@Model.Id">
                        <i class="fa fa-plus me-1"></i> Agregar capítulo
                    </a>
                }
            </div>
        </div>

        <!-- Detalles -->
        <div class="col-md-9">
            <h2 class="text-light mb-3">@Model.Titulo</h2>

            <ul class="nav nav-tabs mb-3" id="novelaTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="capitulos-tab" data-bs-toggle="tab" href="#capitulos" role="tab">Capítulos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="sinopsis-tab" data-bs-toggle="tab" href="#sinopsis" role="tab">Sinopsis</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="resenas-tab" data-bs-toggle="tab" href="#resenas" role="tab">Reseñas (@Model.Reseñas?.Count ?? 0)</a>
                </li>
            </ul>

            <div class="tab-content" id="novelaTabsContent">
                <div class="tab-pane fade show active" id="capitulos" role="tabpanel">
                    @if (Model.Capitulos == null || !Model.Capitulos.Any())
                    {
                        <p class="text-muted">No hay capítulos disponibles.</p>
                    }
                    else
                    {
                        @foreach (var cap in Model.Capitulos.OrderBy(c => c.NumeroCapitulo))
                        {
                            <div class="chapter-item d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <a asp-controller="Capituloes" asp-action="Details" asp-route-id="@cap.Id">
                                        Capítulo @cap.NumeroCapitulo — @cap.Titulo
                                    </a>
                                </div>

                                @if (Context.Session.GetString("UsuarioNombre") == Model.Autor?.NombreUsuario)
                                {
                                    <div class="chapter-actions d-flex gap-2">
                                        <a asp-controller="Capituloes" asp-action="Edit" asp-route-id="@cap.Id"
                                           class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                                        <form asp-controller="Capituloes" asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@cap.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </div>
                                }
                            </div>
                        }

                    }
                </div>

                <div class="tab-pane fade" id="sinopsis" role="tabpanel">
                    <p>@Model.Sinopsis</p>
                </div>

                <div class="tab-pane fade" id="resenas" role="tabpanel">
                    @if (Model.Reseñas == null || !Model.Reseñas.Any())
                    {
                        <p class="text-muted">No hay reseñas todavía.</p>
                    }
                    else
                    {
                        foreach (var r in Model.Reseñas)
                        {
                            <div class="border-bottom pb-2 mb-2">
                                <strong>@r.Usuario?.NombreUsuario:</strong>
                                <p>@r.Comentario</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
