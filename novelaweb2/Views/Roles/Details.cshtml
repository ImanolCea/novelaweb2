@model novelaweb2.Models.Role

@{
    ViewData["Title"] = "Detalles del rol";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Detalles del rol</h1>
            <p class="admin-subtitle">Información del rol seleccionado.</p>
        </div>
        <div class="admin-actions">
            <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Volver</a>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="fa-solid fa-pen-to-square me-2"></i>Editar rol
            </a>
        </div>
    </div>

    <div class="admin-card">
        <dl class="row mb-0">
            <dt class="col-sm-3 text-uppercase text-muted">Nombre</dt>
            <dd class="col-sm-9 text-white">@Model?.Nombre</dd>
        </dl>
    </div>
</div>
