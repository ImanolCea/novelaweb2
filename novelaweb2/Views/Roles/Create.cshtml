@model novelaweb2.Models.Role

@{
    ViewData["Title"] = "Crear rol";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Nuevo rol</h1>
            <p class="admin-subtitle">Define un rol para asignar permisos específicos a los usuarios.</p>
        </div>
        <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Volver al listado</a>
    </div>

    <div class="admin-card">
        <form asp-action="Create" class="admin-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej. Administrador" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk me-2"></i>Guardar rol
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
