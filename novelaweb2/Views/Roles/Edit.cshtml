@model novelaweb2.Models.Role

@{
    ViewData["Title"] = "Editar rol";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Editar rol</h1>
            <p class="admin-subtitle">Actualiza la información del rol seleccionado.</p>
        </div>
        <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Volver al listado</a>
    </div>

    <div class="admin-card">
        <form asp-action="Edit" class="admin-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk me-2"></i>Guardar cambios
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
