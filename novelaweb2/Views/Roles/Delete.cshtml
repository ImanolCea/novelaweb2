@model novelaweb2.Models.Role

@{
    ViewData["Title"] = "Eliminar rol";
}

<div class="admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title text-danger">Eliminar rol</h1>
            <p class="admin-subtitle">Confirma si deseas eliminar este rol. Esta acción no se puede deshacer.</p>
        </div>
        <a class="btn btn-outline-light" asp-action="Index"><i class="fa-solid fa-arrow-left me-2"></i>Cancelar</a>
    </div>

    <div class="admin-card">
        <dl class="row mb-4">
            <dt class="col-sm-3 text-uppercase text-muted">Nombre</dt>
            <dd class="col-sm-9 text-white">@Model?.Nombre</dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash me-2"></i>Eliminar definitivamente
            </button>
            <a class="btn btn-outline-light" asp-action="Index">Conservar</a>
        </form>
    </div>
</div>
