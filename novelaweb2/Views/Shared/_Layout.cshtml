@using Microsoft.AspNetCore.Http
@{
    var usuarioNombre = Context.Session.GetString("UsuarioNombre");
    var rol = Context.Session.GetString("Rol");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Novelas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLMDJ8E2S08+3ETQd/ty/z1+T1g+n9dJ8R/uA6FhG/lE/O7/8s..." crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="~/js/theme.js" asp-append-version="true"></script>
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="site-header mb-4">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid max-1200">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book-open brand-icon"></i>
                    <span class="brand-text">WEB NOVELAS</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Novelas" asp-action="Series">Series</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Seguimientoes" asp-action="MisBookmarks">Mis bookmarks</a></li>

                        @if (Context.Session.GetString("Rol") == "Administrador" || Context.Session.GetString("Rol") == "Moderador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">
                                    <i class="fa-solid fa-shield-halved me-1"></i> Administración
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-theme-toggle" onclick="toggleTheme()" title="Cambiar modo claro/oscuro">
                            <i class="fa-solid theme-icon-dynamic"></i>
                        </button>

                        @if (Context.Session.GetString("UsuarioNombre") != null)
                        {
                            <div class="dropdown user-menu">
                                <a class="dropdown-toggle text-light" href="#" data-bs-toggle="dropdown">
                                    <i class="fa fa-user me-1"></i> @Context.Session.GetString("UsuarioNombre")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="MisDatos">Mis datos</a></li>
                                    <li><a class="dropdown-item" asp-controller="Listas" asp-action="MisListas">Mis listas</a></li>
                                    <li><a class="dropdown-item" asp-controller="Novelas" asp-action="MisNovelas">Mis novelas</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">Cerrar sesión</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm" asp-controller="Auth" asp-action="Login">Iniciar sesión</a>
                            <a class-"btn btn-ghost btn-sm" asp-controller="Auth" asp-action="Register">Registrarse</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="pb-4">
        <div class="container-fluid px-3 px-md-4">
            @RenderBody()
        </div>
    </main>

    <footer class="site-footer text-center mt-auto py-3">
        <p>© @(DateTime.Now.Year) Web Novelas — Todos los derechos reservados</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>